<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/txtErrData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/txtDimMedium"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:text="24/02/20\n22:40"
            tools:ignore="RtlCompat"
            android:layout_weight="1.1"/>

        <TextView
            android:id="@+id/txtErrDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtDimMedium"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:text="Messaggio di errore dall'Arduino potrebbe essere anche lungo, anche più di così"
            android:layout_weight="0.5"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txtErrCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="@dimen/txtDimMedium"
            android:text="200"
            android:layout_weight="1.2"
            tools:ignore="RtlCompat" />

    </LinearLayout>

</LinearLayout>